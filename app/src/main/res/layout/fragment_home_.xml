<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Home_Fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/red_700"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                </LinearLayout>

            <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/openingamountTV_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:hint="@string/totalcashhint"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/red_500" />
                        <TextView
                            android:id="@+id/openingamountTitle_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/opening"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:gravity="center"
                            android:id="@+id/textdayend_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="0.00"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/red_500" />
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/dayendcashTitle_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dayendcash"
                            android:textAlignment="center"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/expenseamountTV_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:hint="@string/totalcashhint"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/red_500" />
                        <TextView
                            android:id="@+id/expenseTitle_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/expense"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/purchaseamountTV_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:hint="@string/totalcashhint"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/red_500" />
                        <TextView
                            android:id="@+id/purchaseTitle_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/purchase"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/payableamountTV_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:hint="@string/totalcashhint"
                            android:textColor="@color/black" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/red_500" />
                        <TextView
                            android:id="@+id/payableTitle_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/payable"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/cashsalesamountTV_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:hint="@string/totalcashhint"
                            android:textColor="@color/black"
                            android:textSize="16sp"  />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/red_500" />
                        <TextView
                            android:id="@+id/cashsalesTitle_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/cashsales"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/creditsalesamountTV_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:hint="@string/totalcashhint"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/red_500" />
                        <TextView
                            android:id="@+id/creditsalesTitle_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="@string/creditsales"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/totalsalesamountTV_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:hint="@string/totalcashhint"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/red_500" />
                        <TextView
                            android:id="@+id/totalsalesTitle_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/totalsales"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/cashboxBtn_id"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/cashBox"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textAllCaps="false" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/newtransactionBtn_id"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:text="@string/newtransaction"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textAllCaps="false" />
                <Button
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/orderBtn_id"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/order"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/showtransactionBtn_id"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/showtransaction"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textAllCaps="false" />
                <ImageView
                    android:id="@+id/lockscreen_id"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/digitalistic"
                    android:textAlignment="center"
                    android:textAllCaps="false" />
                <Button
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/adjustBtn_id"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/cashreturn"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="3">

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/receivepay_fragment_id"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/rp"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textAllCaps="false" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/expenseBtn_id"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:text="@string/expense"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textAllCaps="false" />
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/openingammount_id"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/opening"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textAllCaps="false" />
         </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>