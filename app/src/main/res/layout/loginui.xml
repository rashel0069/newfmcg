<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="151dp"
            android:layout_height="195dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/loginimage" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24.13dp"
            android:layout_marginTop="239dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/enter_text"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23.13dp"
            android:layout_marginTop="283dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/enter_your_"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone_numbe"
            android:layout_width="126dp"
            android:layout_height="29dp"
            android:layout_below="@+id/enter_text"
            android:layout_marginStart="23dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:lineSpacingExtra="9sp"
            android:text="@string/phone_numbe"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="16sp"
            android:translationY="-4.75sp" />

        <RelativeLayout
            android:id="@+id/f1"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_numbe"
            android:layout_marginStart="23dp">

            <ImageView
                android:id="@+id/cell_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/calling" />

            <EditText
                android:id="@+id/phone_number_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/cell_image"
                android:background="@color/primary"
                android:hint="+8801700000000"
                android:textColorHint="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/phone_number_id"
                android:background="@drawable/vector_2" />
        </RelativeLayout>

        <TextView
            android:id="@+id/password_tv"
            android:layout_width="126dp"
            android:layout_height="29dp"
            android:layout_below="@id/f1"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:lineSpacingExtra="9sp"
            android:text="Password"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="16sp"
            android:translationY="-4.75sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/f2"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_tv"
            android:layout_marginStart="23dp"
            android:textColorHint="@color/white"
            app:boxBackgroundColor="#00FFFFFF"
            app:boxStrokeColor="#00FFFFFF"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/red_200"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_Id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:backgroundTintMode="add"
                android:hint="*********"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>

</ScrollView>