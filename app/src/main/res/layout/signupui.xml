<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23.88dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/back_arrow_id"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/backarrow" />

        <TextView
            android:id="@+id/cre_text"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_arrow_id"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:lineHeight="29dp"
            android:text="@string/create_account"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/cre_text2"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cre_text"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/montserrat"
            android:lineHeight="15dp"
            android:text="@string/enter_your_cr"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="126dp"
            android:layout_height="29dp"
            android:layout_below="@+id/cre_text2"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:lineHeight="29dp"
            android:text="@string/phone_number"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/f1"
            android:layout_width="364.12dp"
            android:layout_height="49dp"
            android:layout_below="@+id/phone_tv"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calling"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/calling" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:theme="@style/login"
                app:boxBackgroundMode="none"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/reg_phoneNumber_id"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/mobile"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="11"
                    android:padding="8dp"
                    android:textColor="@color/white"
                  />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="364.12dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f1"
            android:background="@drawable/vector_2" />

        <TextView
            android:id="@+id/password_tv"
            android:layout_width="126dp"
            android:layout_height="29dp"
            android:layout_below="@id/view1"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:lineHeight="29dp"
            android:text="@string/password"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/f2"
            android:layout_width="364.12dp"
            android:layout_height="49dp"
            android:layout_below="@+id/password_tv"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lock" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:theme="@style/login"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white">

                <EditText
                    android:id="@+id/reg_password_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:padding="8dp"
                    android:textColor="@color/white"
                  />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="364.12dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f2"
            android:background="@drawable/vector_2" />

        <TextView
            android:id="@+id/confirm_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_below="@id/view2"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:lineHeight="29dp"
            android:text="@string/confirm_password"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/f3"
            android:layout_width="364.12dp"
            android:layout_height="49dp"
            android:layout_below="@+id/confirm_password_tv"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/conf_password"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="13dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lock" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:theme="@style/login"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white">

                <EditText
                    android:id="@+id/reg_confirm_password_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/confirm_password_again"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:padding="8dp"
                    android:textColor="@color/white"
                  />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="364.12dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f3"
            android:background="@drawable/vector_2" />

        <TextView
            android:id="@+id/terms"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:layout_marginTop="25.35dp"
            android:lineHeight="20.7dp"
            android:text="@string/terms"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/reg_button"
            style="?android:attr/selectableItemBackground"
            android:layout_width="364dp"
            android:layout_height="55dp"
            android:layout_below="@id/terms"
            android:layout_marginTop="26dp"
            android:background="@drawable/button_backgroung"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:lineHeight="30dp"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reg_login"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_button"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat"
            android:lineHeight="17.07dp"
            android:text="@string/signin"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="14dp" />
    </RelativeLayout>


</ScrollView>