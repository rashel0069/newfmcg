<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.appshat.fmcgapp.fragment.ShowTransaction_Fragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/linearLayout25"
           android:weightSum="4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="8dp"
           tools:ignore="MissingConstraints">

           <EditText
               android:layout_gravity="center"
               android:id="@+id/smblET_id"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@drawable/edittext_background"
               android:hint="@string/scontacthint"
               android:inputType="number"
               android:paddingLeft="8dp"
               android:textSize="16sp" />

           <Button
               android:layout_gravity="center"
               android:id="@+id/searchBtn_id"
               android:layout_weight="3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="8dp"
               android:padding="8dp"
               android:text="@string/search"
               android:textAllCaps="false" />
       </LinearLayout>

       <HorizontalScrollView
           android:layout_below="@+id/linearLayout25"
           android:id="@+id/linearLayout26"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="8dp"
               android:weightSum="4">
               <Button
                   android:id="@+id/allBtn_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:singleLine="true"
                   android:text="@string/alltrans"
                   android:textAllCaps="false" />

               <Button
                   android:id="@+id/transallBtn_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginStart="8dp"
                   android:singleLine="true"
                   android:text="@string/todaytrans"
                   android:textAllCaps="false" />

               <Button
                   android:id="@+id/expBtn_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="8dp"
                   android:layout_weight="1"
                   android:text="@string/expense"
                   android:textAllCaps="false" />

               <Button
                   android:id="@+id/payrecBtn_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="8dp"
                   android:layout_weight="1"
                   android:singleLine="true"
                   android:text="@string/payrec"
                   android:textAllCaps="false" />

           </LinearLayout>
       </HorizontalScrollView>

       <LinearLayout
           android:layout_below="@+id/linearLayout26"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv_id"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/red_500"
               android:padding="8dp" />
       </LinearLayout>
   </RelativeLayout>


</FrameLayout>