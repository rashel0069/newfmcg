<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="254dp"
        android:layout_height="168.06dp"
        android:layout_marginStart="77.51dp"
        android:layout_marginTop="131.13dp"
        android:layout_marginEnd="81.93dp"
        android:layout_marginBottom="431.81dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="45.03dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="313dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:lineHeight="30dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageOnboarding" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="319dp"
        android:layout_height="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="264dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>